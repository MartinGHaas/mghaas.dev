---
import "../styles/global.css";

interface Props {
	title: string;
}

const { title } = Astro.props as Props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="no_script_icon.png" />
		<meta name="generator" content={Astro.generator} />
	    <title>â€¢ { title }</title>
    </head>
    <script>
        (function () {
            try {
                const hour = new Date().getHours();
                const isDay = hour >= 6 && hour < 18;
                const link = document.querySelector('link[rel="icon"][type="image/png"]') || document.querySelector('link[rel="icon"]');

                const image_ref = isDay ? '/day_icon.png' : '/night_icon.png';

                if (link) {
                    link.setAttribute('href', image_ref);
                }
            } catch (_) {
            }
        })();
    </script>
	<body>
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
